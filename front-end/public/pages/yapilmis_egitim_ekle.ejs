<!DOCTYPE html>
<html>
    <head>
        <%include ../partial-pages/css.ejs%>
    </head>
    <body class="skin-blue">
       <%include ../partial-pages/master_head.ejs%>
        <div class="wrapper row-offcanvas row-offcanvas-left">
           <%include ../partial-pages/master_left.ejs%>
            <!-- Right side column. Contains the navbar and content of the page -->
            <aside class="right-side">                
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <h1 style="font-size:22px;">
                        Yapılmış Eğitim Ekleme Ekranı
                    </h1>
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-mobile-phone"></i> Mobil Uygulamalar</a></li>
                        <li class="active">Yapılmış Eğitim Ekle</li>
                    </ol>
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <div class="box box-info">
                                    <!-- form start -->
                                    <form id="frmYapilmisEgitimler"  role="form" method="post" action="/yapilmis_egitimler/ekle" >
                                        <div class="box-body">
                                           <div class="row">
                                                <div class="col-md-3 col-md-offset-1">
                                                    <div class="form-group ">
                                                        <label>Tarih</label>
                                                        <input type="date" name="tarih" class="form-control "  required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-10 col-md-offset-1">
                                                    <div class="form-group ">
                                                        <label>Başlık</label>
                                                        <input type="text" name="baslik" class="form-control " placeholder="Başlık Giriniz"  required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-10 col-md-offset-1">
                                                    <div class="form-group ">
                                                        <label>Açıklama</label>
                                                        <textarea  placeholder="Açıklama Giriniz" name="aciklama" rows="3" class="form-control"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-10 col-md-offset-1">
                                                    <div class="form-group ">
                                                        <button class="btn btn-info" data-toggle='modal' data-target='#uploadModal'>Fotograf Seç</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <input id="inpResimYukle" type="text" name="dosyaLinki" class="form-control" style="display:none;"> 
                                        </div><!-- /.box-body -->
                                        <div class="box-footer">
                                            <div style="text-align:center">
                                                <button type="submit" class="btn btn-primary btn-flat">Kaydet</button>
                                            </div>
                                        </div>
                                    </form>
                                </div><!-- /.box -->
                            </div>
                        </div>
                    </div>
                </section><!-- /.content -->
            </aside><!-- /.right-side -->
        </div><!-- ./wrapper -->
        <div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Fotograf yukle</h4>
              </div>
              <form id="formPdfYukle" action="/pdfyukle" enctype="multipart/form-data" method="post">
                  <div class="modal-body">
                     <label for="">Fotograf Yukle</label>
                     <input name="pdfler" type="file" class="form-control">
                  </div>
                  <div class="modal-footer">
                    <a class="btn btn-default" data-dismiss="modal">Kapat</a>
                    <button id="btnSubmitModal" type="submit" class="btn btn-primary">Yukle</button>
                  </div>
              </form>
            </div>
          </div>
        </div>
        <%include ../partial-pages/script.ejs%>
        <script src="../js/helper.js/Helper.js"></script>
        <script src="../js/pages-js/yapilmisEgitimler.js"></script>
    </body>
</html>