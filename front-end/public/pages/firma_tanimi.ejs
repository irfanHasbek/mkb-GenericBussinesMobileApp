<!DOCTYPE>
<html>
<head>
    <%include ../partial-pages/css.ejs%>
</head>
<body class="skin-blue">
   <%include ../partial-pages/master_head.ejs%>
    <div class="wrapper row-offcanvas row-offcanvas-left">
       <%include ../partial-pages/master_left.ejs%>
        <aside class="right-side">                
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Firma Tanımları
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-home"></i> Anasayfa</a></li>
                    <li class="active">Firma Tanımları</li>
                </ol>
            </section>
            <!-- Main content -->
            <section class="content">
                <form id="formFirmaTanimi" method="post" action="">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <div class="box box-info">
                                    <!-- form start -->
                                    <div class="box-body">
                                        <br>
                                        <div class="row">
                                            <div class="col-md-10 col-md-offset-1">
                                                <div class="col-md-10">
                                                    <div class="">
                                                        <div class="form-group">
                                                            <select id="slctFirma" name="_id" class="icon-menu btn-block btn-default" style="height:35px;">
                                                                <option style="padding-left:0px;" value="-1">Firma Seçiniz</option>
                                                                <%for(var i = 0; i < firmalar.length; i++){%>
                                                                    <option style="padding-left:0px;" value="<%=firmalar[i]._id%>"><%=firmalar[i].unvan%></option>
                                                                <%}%>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <button id="btnFirmaBilgiGetir" class="btn btn-info btn-flat btn-block" type="button">Bilgileri Getir</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-10 col-md-offset-1">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label >Firma Kodu</label>
                                                        <input id="inpGizliFirmaKodu" type="text" class="form-control" disabled>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-10 col-md-offset-1">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label >Unvan</label>
                                                        <input id="inpUnvan" name="unvan" type="text" class="form-control"  placeholder="Unvan Giriniz">
                                                        <input id="inpFirmaKodu" name="firmaKodu" style='display:none;' value="">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-10 col-md-offset-1">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label >Email</label>
                                                        <input id="inpEmail" name="email" type="text" class="form-control"  placeholder="Email Giriniz">
                                                        <input id="inpFotografListesi" name="resimLinki" style='display:none;' value="">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-10 col-md-offset-1">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label >Sifre</label>
                                                        <input id="inpSifre" name="sifre" type="password" class="form-control"  placeholder="Sifre giriniz bu sifre mail atarken kullanilacaktir.">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-10 col-md-offset-1">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label >Logo Yükle</label>
                                                        <button id="btnFotografYukle" class="btn btn-info btn-flat btn-block" type="button" data-toggle="modal" data-target="#uploadModal">Logo Yükle</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- /.box -->
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <div class="box">
                                    <div class="">
                                        <!-- Custom Tabs -->
                                        <div class="nav-tabs-custom">
                                            <ul class="nav nav-tabs">
                                                <li class="active"><a href="#tab_1" data-toggle="tab">Yetkili Bilgileri</a></li>
                                                <li><a href="#tab_2" data-toggle="tab">İletişim Bilgileri</a></li>
                                            </ul>
                                            <div class="tab-content">
                                                <div class="tab-pane active" id="tab_1">
                                                    <div class="row">
                                                        <div class="col-md-10 col-md-offset-1">
                                                            <div class="box-body">
                                                                <div class="form-group">
                                                                    <label >Yetkili Adı</label>
                                                                    <input id="inpYetkiliIsim" name="yetkiliIsim" type="text" class="form-control"  placeholder="Yetkili Adı Giriniz">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label >Görev</label>
                                                                    <input id="inpYetkliliGorev" type="text" name="yetkiliGorev" class="form-control"  placeholder="Görevi Giriniz">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label>GSM</label>
                                                                    <input id="inpYetkiliGsm" type="text" name="yetkiliGsm" class="form-control" data-inputmask='"mask": "(999) 999-9999"' data-mask  placeholder="Telefon Giriniz">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label >E-mail</label>
                                                                    <input id="inpYetkiliEmail" type="email" name="yetkiliEmail" class="form-control"  placeholder="E-mail Giriniz">
                                                                </div>
                                                            </div><!-- /.box-body -->
                                                        </div>
                                                    </div>
                                                </div><!-- /.tab-pane -->
                                                <div class="tab-pane" id="tab_2">
                                                    <div class="row">
                                                        <div class="col-md-10 col-md-offset-1">
                                                            <div class="box-body">
                                                                <div class="form-group">
                                                                    <label >Adres</label>
                                                                    <textarea id="inpIletisimAdres" name="iletisimAdres" type="text" class="form-control"  placeholder="Adres Giriniz" rows="2" style="resize:vertical;"></textarea>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label >İl</label>
                                                                    <input id="inpIletisimIl" name="iletisimIl" type="text" class="form-control"  placeholder="İl Giriniz">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label >İlçe</label>
                                                                    <input id="inpIletisimIlce" name="iletisimIlce" type="text" class="form-control"  placeholder="İlçe Giriniz">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label >İş Tel</label>
                                                                    <input id="inpIletisimIsTel" name="iletisimIsTel" type="text" class="form-control" data-inputmask='"mask": "(999) 999-9999"' data-mask  placeholder="İş Tel Giriniz">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label >Fax</label>
                                                                    <input id="inpIletisimFax" type="text" name="iletisimFax" class="form-control" data-inputmask='"mask": "(999) 999-9999"' data-mask  placeholder="Fax Giriniz">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label >Web Adresi</label>
                                                                    <input id="inpIletisimWebAdres" type="text" name="iletisimWebAdres" class="form-control"  placeholder="http://www.">
                                                                </div>
                                                            </div><!-- /.box-body -->
                                                        </div>
                                                    </div>
                                                </div><!-- /.tab-pane -->
                                                <div class="box-footer">
                                                    <div style="text-align:center;">
                                                        <button id="btnFirmaKaydet" type="submit" class="btn btn-primary">Kaydet</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- /.tab-content -->
                                        </div><!-- nav-tabs-custom -->
                                    </div><!-- /.col -->
                                </div><!-- /.box -->
                            </div>
                        </div>
                    </div>
                </form>
                <div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Dosya yukle</h4>
                      </div>
                      <form id="formFotografYukle" action="/yukleme/cokluyukle" enctype="multipart/form-data" method="post">
                          <div class="modal-body">
                             <label for="">Fotograf Yukle</label>
                             <input id="inpFotografYukle" name="fotograflar" type="file" class="form-control">
                          </div>
                          <div class="modal-footer">
                            <a class="btn btn-default" data-dismiss="modal">Kapat</a>
                            <button id="btnSubmitModal" type="submit" class="btn btn-primary">Yukle</button>
                          </div>
                      </form>
                    </div>
                  </div>
                </div>
            </section><!-- /.content -->
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->
    <%include ../partial-pages/script.ejs%>
    <!-- page.js -->
    <script src="../js/helper.js/Helper.js" type="text/javascript"></script>
    <script src="../js/pages-js/firma_tanimi.js" type="text/javascript"></script>
</body>
</html>