<!DOCTYPE html>
<html>
    <head>
        <%include ../partial-pages/css.ejs%>
    </head>
    <body class="skin-blue">
       <%include ../partial-pages/master_head.ejs%>
        <div class="wrapper row-offcanvas row-offcanvas-left">
           <%include ../partial-pages/master_left.ejs%>
            <!-- Right side column. Contains the navbar and content of the page -->
            <aside class="right-side">                
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <h1 style="font-size:22px;">
                        Haber Listeleme Ekranı
                    </h1>
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-mobile-phone"></i> Mobil Uygulamalar</a></li>
                        <li class="active">Haber Listele</li>
                    </ol>
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <div class="box box-info">
                                    <div class="box-header">
                                        <h3 class="box-title">Haber Listeleme</h3>
                                    </div><!-- /.box-header -->
                                    
                                    <div class="box-body">
                                       <div class="row">
                                            <div class="col-md-1">
                                                <select name="" id="" class="form-control">
                                                    <option value="">1</option>
                                                    <option value="">2</option>
                                                    <option value="">3</option>
                                                </select>
                                            </div>
                                        </div>
                                        <br>
                                        <table class="table table-bordered haberler">
                                            <tr style="border-bottom:3px solid #3c8dbc;">
                                                <th class="text-center" style="width: 40px">#</th>
                                                <th>Tarih</th>
                                                <th>Haber Adı</th>
                                                <th>Haber Linki</th>
                                                <th>Açıklama</th>
                                                <th>Resim</th>
                                                <th>Degistiren</th>
                                                <th class="text-center" style="width: 100px"></th>
                                            </tr>
                                            <tbody>
                                                 <%for(var i = 0; i < haberler.length; i++){%>
                                                     <tr id="<%=haberler[i]._id%>">
                                                        <td class="text-center"><%=(i+1)%></td>
                                                        <td><%=haberler[i].tarih%></td>
                                                        <td><%=haberler[i].haberAdi%></td>
                                                        <td><a href="<%=haberler[i].haberLinki%>">Link</a></td>
                                                        <td><%=haberler[i].aciklama%></td>
                                                        <td>
                                                            <a href="<%=haberler[i].fotografLinki%>" data-toggle="lightbox" data-footer="">
                                                                <img src="<%=haberler[i].fotografLinki%>" alt="" class="img-responsive img-thumbnail" style="max-height:40px;">
                                                            </a>

                                                        </td>
                                                        <td><%=haberler[i].degistiren%></td>
                                                        <td>
                                                            <button class="btn btn-danger btn-sm sil " data-toggle="tooltip" data-placement="top" title="Sil"><i class="fa fa-trash-o"></i></button>
                                                        </td>                                                
                                                    </tr>
                                                 <%}%>
                                            </tbody>
                                        </table>
                                    </div><!-- /.box-body -->
                                </div><!-- /.box -->
                            </div>
                        </div>
                    </div>
                </section><!-- /.content -->
            </aside><!-- /.right-side -->
        </div><!-- ./wrapper -->
       <%include ../partial-pages/script.ejs%>
        <script src="../js/helper.js/Helper.js"></script>
        <script src="../js/pages-js/haber_listele.js"></script>
    </body>
</html>