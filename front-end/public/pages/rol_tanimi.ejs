<!DOCTYPE html>
<html>
    <head>
        <%include ../partial-pages/css.ejs%>
    </head>
    <body class="skin-blue">
       <%include ../partial-pages/master_head.ejs%>
        <div class="wrapper row-offcanvas row-offcanvas-left">
           <%include ../partial-pages/master_left.ejs%>
            <!-- Right side column. Contains the navbar and content of the page -->
            <aside class="right-side">                
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <h1 style="font-size:22px;">
                        Rol Tanımları Ekranı
                    </h1>
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-home"></i> Anasayfa</a></li>
                        <li class="active">Rol Tanımları</li>
                    </ol>
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <div class="box box-info">
                                    <!-- form start -->
                                    <form id="formRolTanimi" role="form" method="post" action="/rol_tanimi/ekle">
                                        <div class="box-body">
                                            <div class="row">
                                                <div class="col-md-10 col-md-offset-1">
                                                    <div class="form-group ">
                                                        <label>Rol</label>
                                                        <input type="text" class="form-control " name="rol"  placeholder="Rol Giriniz" required>
                                                        <input type="text" name="firmaKodu" style="display:none;" value="<%=session.kullanici.firmaKodu%>">
                                                        <input type="text" name="degistiren" style="display:none;" value="<%=session.kullanici.isim%> <%=session.kullanici.soyisim%>">
                                                    </div>
                                                </div>
                                            </div>
                                        </div><!-- /.box-body -->
                                        <div class="box-footer">
                                            <div style="text-align:center">
                                                <button type="submit" class="btn btn-primary btn-flat">Kaydet</button>
                                            </div>
                                        </div>
                                    </form>
                                </div><!-- /.box -->
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <div class="box">
                                    <div class="box-header">
                                        <h3 class="box-title">Rol Listeleme</h3>
                                    </div><!-- /.box-header -->
                                    <div class="box-body">
                                        <table class="table table-bordered roller">
                                            <tr style="border-bottom:3px solid #3c8dbc;">
                                                <th class="text-center" style="width: 40px">#</th>
                                                <th>Rol</th>
                                                <th>İşlemi Yapan</th>
                                                <th class="text-center" style="width: 40px"></th>
                                            </tr>
                                            <tbody>
                                                 <%for(var i = 0; i < roller.length; i++){%>
                                                     <tr id="<%=roller[i]._id%>">
                                                        <td class="text-center"><%=i+1%>.</td>
                                                        <td><%=roller[i].rol%></td>
                                                        <td><%=roller[i].degistiren%></td>
                                                        <td>
                                                            <%if(roller[i].degistiren != 'Sistem'){%>
                                                                <button class="btn btn-danger btn-sm sil"><i class="fa fa-trash-o"></i></button>
                                                            <%}%>                                                    
                                                        </td>                                                
                                                    </tr>
                                                 <%}%>
                                            </tbody>
                                        </table>
                                    </div><!-- /.box-body -->
                                </div><!-- /.box -->
                            </div>
                        </div>
                    </div>
                </section><!-- /.content -->
            </aside><!-- /.right-side -->
        </div><!-- ./wrapper -->
       <%include ../partial-pages/script.ejs%>
        <script src="../js/helper.js/Helper.js"></script>
        <script src="../js/pages-js/rol_tanimi.js"></script>
    </body>
</html>