<!DOCTYPE html>
<html>
    <head>
        <%include ../partial-pages/css.ejs%>
    </head>
    <body class="skin-blue">
       <%include ../partial-pages/master_head.ejs%>
        <div class="wrapper row-offcanvas row-offcanvas-left">
           <%include ../partial-pages/master_left.ejs%>
            <!-- Right side column. Contains the navbar and content of the page -->
            <aside class="right-side">                
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <h1 style="font-size:22px;">
                        Döküman Listeleme Ekranı
                    </h1>
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-mobile-phone"></i> Mobil Uygulamalar</a></li>
                        <li class="active">Ürün Listele</li>
                    </ol>
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <div class="box box-info">
                                    <div class="box-header">
                                        <h3 class="box-title">Ürün Listeleme</h3>
                                    </div><!-- /.box-header -->
                                    
                                    <div class="box-body">
                                       <div class="row">
                                            <div class="col-md-1">
                                                <select name="" id="" class="form-control">
                                                    <option value="">1</option>
                                                    <option value="">2</option>
                                                    <option value="">3</option>
                                                </select>
                                            </div>
                                        </div>
                                        <br>
                                        <table class="table table-bordered urunler">
                                            <tr style="border-bottom:3px solid #3c8dbc;">
                                                <th class="text-center" style="width: 40px">#</th>
                                                <th>Ürün Grubu</th>
                                                <th>Döküman Adi</th>
                                                <th>Döküman Linki</th>
                                                <th>Ekleyen</th>
                                                <th class="text-center" style="width:40px"></th>
                                            </tr>
                                            <tbody>
                                                 <%for(var i = 0; i < urunGruplari.length; i++){%>
                                                     <%for(var j = 0; j < urunGruplari[i].icerik.length; j++){%>
                                                         <tr id="<%=urunGruplari[i]._id%>" data='<%=urunGruplari[i].icerik[j]._id%>'>
                                                            <td class="text-center"><%=(i+1)%></td>
                                                            <td><%=urunGruplari[i].urunGrubu%></td>
                                                            <td><%=urunGruplari[i].icerik[j].dosyaAdi%></td>
                                                            <td><a href="<%=urunGruplari[i].icerik[j].dosyaLinki%>">Link</a></td>
                                                            <td><%=urunGruplari[i].degistiren%></td>
                                                            <td id="<%=urunGruplari[i].icerik[j]._id%>">
                                                                <button class="btn btn-danger btn-sm sil " data-toggle="tooltip" data-placement="top" title="Sil"><i class="fa fa-trash-o"></i></button>
                                                            </td>                                                
                                                        </tr>
                                                     <%}%>
                                                 <%}%>
                                            </tbody>
                                        </table>
                                    </div><!-- /.box-body -->
                                </div><!-- /.box -->
                            </div>
                        </div>
                    </div>
                </section><!-- /.content -->
            </aside><!-- /.right-side -->
        </div><!-- ./wrapper -->
       <%include ../partial-pages/script.ejs%>
        <script src="../js/helper.js/Helper.js"></script>
        <script src="../js/pages-js/urun_listele.js"></script>
    </body>
</html>